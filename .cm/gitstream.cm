# -*- mode: yaml -*-

manifest:
  version: 1.0
  
automations:
  dispatch_action_{{ item.name }}:
    if:
      - {{ files | match(term='src/api') | some }}
    run:
      - action: run-github-workflow@v1
        args:
          workflow: .github/workflows/api.yml
          check_name: 'API-CI'
      - action: add-label@v1
        args:
          label: 'API CI'
